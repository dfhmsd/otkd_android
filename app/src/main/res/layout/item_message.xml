<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/vIncomingCorner"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/chat_corner"
        />

    <ImageView
        android:id="@+id/vYourCorner"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:rotationY="180"
        android:src="@drawable/chat_corner"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/vCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/round_corners_radius"
        app:cardElevation="0dp"
        >

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vMessage"
                fontPath="@string/opensans_semibold_font_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"
                tools:text="asdawdawdwda"

                />

            <TextView
                android:id="@+id/vSender"
                fontPath="@string/opensans_semibold_font_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/vMessage"
                android:layout_margin="12dp"
                android:ellipsize="marquee"
                android:gravity="bottom"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/secondaryTextColor"
                android:textSize="12sp"
                tools:text="asdawdawdwda"
                />

            <TextView
                android:id="@+id/vDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/vMessage"
                android:layout_margin="12dp"
                android:gravity="bottom"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/secondaryTextColor"
                tools:text="asdawdawdwda"
                />
        </android.support.percent.PercentRelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.percent.PercentRelativeLayout>